<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/ic_calendario" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/white">

                <Button
                    android:id="@+id/btnCriarEvento"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Criar evento"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/ic_convidar" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/white">

                <Button
                    android:id="@+id/btnConvidar"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Convidar"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/ic_lembrete" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/white">

                <Button
                    android:id="@+id/btnCriarLembrete"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Criar lembrete"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>