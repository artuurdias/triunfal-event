<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/telaHome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DDA550"
    android:clipToOutline="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/view3Linhas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tres_linhas_home"
            />

        <View
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/triunfal_event_simple_logo"
            />

        <TextView
            android:layout_width="162dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Triunfal Event"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="38dp"
            android:orientation="horizontal">

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/calendario_home"
                />
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/btnCriarEvento"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Criar evento"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="38dp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/pessoinhas_home"
                />
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/btnConvidar"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Convidar"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="38dp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/lembrete_home"
                />
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/btnCriarLembrete"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Criar lembrete"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>