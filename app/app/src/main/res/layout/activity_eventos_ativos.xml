<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/telaHome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DDA550"
    android:clipToOutline="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tres_linhas_home"
            />

        <View
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/triunfal_event_simple_logo"
            />

        <TextView
            android:layout_width="162dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Triunfal Event"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:gravity="top"
                android:text="Eventos ativos"
                android:textColor="#DDA550"
                android:textSize="35dp"
                />

            <GridView
                android:id="@+id/gvConvites"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                />

            <View
                android:layout_width="170dp"
                android:layout_height="155dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/triunfal_event_simple_logo"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>