<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/telaLogin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DDA550"
    android:clipToOutline="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="90dp"
                android:layout_height="57dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:gravity="top"
                android:text="Login"
                android:textColor="#DDA550"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fundo_cafe"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtUsername"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:hint="Username"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtSenha"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/white"
                    android:hint="Senha"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEntrar"
                    android:layout_width="147dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="110dp"
                    android:backgroundTint="#DDA550"
                    android:text="Entrar"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnSemCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="45dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="NÃ£o possui conta? Clique aqui!"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:backgroundTint="#DDA550"
                    />

                <View
                    android:layout_width="170dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/triunfal_event_simple_logo"
                />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>